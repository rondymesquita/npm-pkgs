{
  "name": "@rondymesquita/nutshell",
  "version": "0.18.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/rondymesquita/nutshell.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "nutshell": "./dist/bin.js"
  },
  "types": "./src/index.ts",
  "main": "./src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "exports": {
    "./bin-dev": "./src/globals.ts",
    "./bin": "./dist/globals.js"
  },
  "scripts": {
    "test": "vitest --watch=false",
    "test:watch": "vitest --threads=false",
    "dev": "tsx --watch ./src/dev.ts start",
    "dev:bin": "./src/dev.bin.ts start",
    "build:dev": "esbuild  --platform=node --format=cjs --outdir=dist --watch ./src/**/*.ts ./src/*.ts",
    "build": "rimraf ./dist && tsc",
    "release": "release-it --ci",
    "docs": "typedoc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@rondymesquita/args": "^0.14.0",
    "@rondymesquita/tasks": "^0.15.0",
    "chalk": "^4.1.0",
    "fast-glob": "^3.3.1",
    "winston": "^3.9.0"
  }
}
