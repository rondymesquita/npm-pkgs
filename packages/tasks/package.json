{
  "name": "@rondymesquita/tasks",
  "version": "0.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/rondymesquita/shell.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/index.ts",
  "bin": {
    "nutshell": "./src/bin.ts"
  },
  "files": [
    "src/**/*"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "typesVersions": {
    "*": {
      "globals": [
        "./src/globals.ts"
      ],
      "core": [
        "./src/core.ts"
      ]
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "dev": "nodemon -w ./src ./src/dev.ts build --dev --name=fulano",
    "dev:bin": "nodemon -w './src' --ext 'ts,js,json' --exec ts-node ./src/bin.ts ./src/example.js",
    "build": "rimraf ./dist && tsc && copyfiles ./example ./dist",
    "release": "release-it --ci",
    "docs": "typedoc"
  },
  "keywords": [],
  "author": "rondymesquita",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^18.11.17",
    "copyfiles": "^2.4.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "release-it": "^15.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.23.10",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@rondymesquita/args": "^0.0.0"
  }
}
