{
  "name": "@rondymesquita/tasks",
  "version": "0.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/rondymesquita/shell.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/index.ts",
  "bin": {
    "nutshell": "./src/bin.ts"
  },
  "files": [
    "src/**/*"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "typesVersions": {
    "*": {
      "globals": [
        "./src/globals.ts"
      ],
      "core": [
        "./src/core.ts"
      ]
    }
  },
  "scripts": {
    "test": "vitest --watch=false  --coverage",
    "test:watch": "vitest --watch=true",
    "dev": "tsx --watch ./src/dev.ts prepare --help",
    "dev:bin": "tsx --watch './src' --ext 'ts,js,json' --exec ts-node ./src/bin.ts ./src/example.js",
    "build": "rimraf ./dist && tsc && copyfiles ./example ./dist",
    "release": "release-it --ci",
    "docs": "typedoc"
  },
  "keywords": [],
  "author": "rondymesquita",
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.11.18",
    "@vitest/coverage-c8": "^0.30.1",
    "copyfiles": "^2.4.1",
    "prettier": "^2.8.2",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "tsx": "^3.12.6",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "@rondymesquita/args": "^0.0.0",
    "cliui": "^8.0.1"
  }
}
