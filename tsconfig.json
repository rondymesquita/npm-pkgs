{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "lib": [
      "ES2021"
    ]
  },
  "exclude": ["**/**.spec*", "**/vitest.config.js", "**/example/**", "**/dist/*", "**/coverage", "**/typedoc"]
}
